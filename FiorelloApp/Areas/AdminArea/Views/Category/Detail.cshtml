@model Category

<div class="container">
    <div class="row">
        <div class="col-lg-10 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">@Model.Name</h1>
                    <p class="text-success">@Model.CreatedDate?.ToString("dd.MM.yyyy")</p>
                    <p>@Model.Description</p>
                    <a class="btn btn-dark" asp-action="index">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>