@model IEnumerable<Product>

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product table</h4>
                    <a class="btn btn-outline-success" asp-action="create">Create</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <td>Image</td>
                                <th> Name </th>
                                <th> Price</th>
                                <th> Category name</th>
                                <th> Product count</th>
                                <th> Created date</th>
                                <th> Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/@product.ProductImages.FirstOrDefault(p=>p.IsMain).ImageUrl" alt="" />
                                    </td>
                                    <td>@product.Name</td>
                                    <td>@product.Price</td>
                                    <td>@product.Category.Name</td>
                                    <td>@product.Count</td>
                                    <td>@product.CreatedDate?.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <a class="text-primary pe-2 text-decoration-none" asp-action="detail" asp-route-id="@product.Id">

                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                        <a class="text-succes pe-2 text-decoration-none" asp-action="update" asp-route-id="@product.Id">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a class="text-danger text-decoration-none" asp-action="delete" asp-route-id="@product.Id">
                                            <i class="fa fa-trash-o "></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>