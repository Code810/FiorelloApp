@model List<BasketVM>
<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">BasketCount</th>
                    <th scope="col">Settings</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/img/@item.Image" width="100" height="100" alt="" />
                        </td>
                        <td>@item.Name</td>
                        <td>@item.BasketCount</td>
                        <td>
                            <a asp-action="delete" asp-route-id="@item.Id">x</a>
                        </td>
                    </tr>
                }
            </thead>
            <tbody>
                
            </tbody>
        </table>
    </div>
</div>
