@model ResetPasswordVM

<div class="container">
    <div class="mt-3 col-lg-4">
        <h3 class="d-inline-block">Reset Password?</h3>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <form method="post">
                <div class="mt-3">
                    <label>Enter Your New Password</label>
                        <input asp-for="Password" class="form-control my-3" placeholder="Password">
                    <label>Confirm Your New Password</label>
                    <input asp-for="RePassword" class="form-control my-3" placeholder="Confirm Password">

                    <button class="btn btn-outline-success" type="submit">Reset Your Password</button>
                </div>
            </form>
        </div>
    </div>
</div>
   