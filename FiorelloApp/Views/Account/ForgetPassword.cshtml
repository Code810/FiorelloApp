<div class="container">
    <div class="mt-3 col-lg-4">
        <h3 class="d-inline-block">Forget Password?</h3>
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div>
            <form method="post">
                <div class="mt-3">
                    <label>Enter Your Email</label>
                    <input name="email" class="form-control mt-3" placeholder="Email" /> <br />
                      <span class="text-danger">
                    @Html.ValidationMessage("Error1")
                    </span> <br /> <br />
                    <button class="btn btn-outline-dark" type="submit">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>